<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Window Insets 对比测试"
        android:textSize="20sp"
        android:textStyle="bold"
        android:layout_marginBottom="32dp"/>

    <Button
        android:id="@+id/btnNormalMode"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="场景1: 普通模式\n(系统自动处理，无区别)"
        android:layout_marginBottom="16dp"/>

    <Button
        android:id="@+id/btnEdgeToEdgeWithoutCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="场景2: 边到边 + 普通RelativeLayout\n❌ 内容被状态栏/导航栏遮挡\n❌ 软键盘弹出时EditText被遮挡"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#F44336"/>

    <Button
        android:id="@+id/btnEdgeToEdgeWithCustom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="场景3: 边到边 + BaseWindowInsetRelativeLayout\n✅ 自动避开状态栏/导航栏\n✅ 软键盘弹出时EditText自动上移"
        android:backgroundTint="#4CAF50"/>

</LinearLayout>